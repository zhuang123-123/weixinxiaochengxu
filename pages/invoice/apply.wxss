/* pages/invoice/apply.wxss */
page {
  background-color: #f0f2f6;
}
.form {
  width: 702rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  display: flex;
  flex-direction: column;
}
.form .title {
  margin-top: 32rpx;
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333;
}
.form .input {
  width: 654rpx;
  height: 90rpx;
  position: relative;
  margin-left: 24rpx;
}
.form .input view {
  position: absolute;
  left: 0;
  top: 0;
  line-height: 90rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #555;
}
.form .inpput input {
  border-bottom: 1rpx solid #e6e6e6;
  padding-left: 200rpx;
  height: 90rpx;
}
.placeholder {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999;
  letter-spacing: -0.82rpx;
  line-height: 90rpx;
}
.save-btn {
  position: fixed;
  left: 24rpx;
  bottom: 32rpx;
  width: 702rpx;
  height: 98rpx;
  background: #feb21c;
  border-radius: 49rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 98rpx;
}